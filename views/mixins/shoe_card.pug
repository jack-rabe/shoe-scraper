mixin shoe_card(shoe)
  .card.m-1.border.border-primary
    img.card-img-top.p-3(src=shoe.img_url, alt='shoe')
    .card-body.text-center
      a.card-title.mx-auto.d-inline(href=shoe.page_url)= shoe.name 
      .container.d-flex.justify-content-around
        p.card-text.mt-2 $#{shoe.price} 
        p.card-text.mt-2.text-capitalize= shoe.brand
